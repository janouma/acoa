    "eslint": "^7.7.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.4.1",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.1",
    "standard": "^14.3.4"
  },
  "peerDependencies": {
    "arangojs": "^6.14.1"
  },
  "engines": {
    "node": "^12.14.1",
    "npm": "^6.13.7"
