{
  "name": "acoa",
  "version": "1.3.3",
  "description": "ArangoDB Collection Object Adapter (ODM)",
  "keywords": [
    "arango",
    "db",
    "graph",
    "odm"
  ],
  "author": "janouma",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/janouma/acoa.git"
  },
  "main": "index.js",
  "files": [
    "lib",
    "doc"
  ],
  "config": {
    "testDbUrl": "http://test:evod@localhost:8529",
    "testDbName": "acoa-test",
    "testDbContainer": "acoa-db",
    "testDbRootPassword": "dev"
  },
  "scripts": {
    "lint": "eslint --no-error-on-unmatched-pattern \"index.js\" \"lib/**/*.js\" \"utils/**/*.js\" \"test/**/*.js\" \"scripts/**/*.js\"",
    "start": "node scripts/init_arangodb",
    "stop": "docker container stop $npm_package_config_testDbContainer",
    "test": "jest --bail --maxWorkers=1",
    "tag": "git tag v$npm_package_version",
    "untag": "git tag -d v$npm_package_version",
    "prepush:tag": "npm run tag",
    "push:tag": "git push origin v$npm_package_version --no-verify"
  },
  "pre-commit": [
    "lint"
  ],
  "pre-push": [
    "test"
  ],
  "standard": {
    "parser": "babel-eslint"
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "parser": "babel-eslint"
  },
  "devDependencies": {
    "arangojs": "^6.14.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.7.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.4.1",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.1",
    "standard": "^14.3.4"
  },
  "peerDependencies": {
    "arangojs": "^6.14.1"
  },
  "engines": {
    "node": ">=12.14.1",
    "npm": ">=6.13.7"
  },
  "volta": {
    "node": "12.14.1",
    "npm": "6.13.7"
  }
}
